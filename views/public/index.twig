    function showRegisterForm(){
        $('.loginBox').hide();
        $('.registerDeveloperBox').hide();
        $('.registerNonprofitBox').hide();

        $('.registerBox').fadeIn('fast');
        $('.modal-dialog').animate({width: '500'}, 'fast', function() {
          $('.registerBox .content').fadeIn('fast');
          $('#modalFooterContent').html("Have an account? " + "<a href='javascript: showLoginForm()'>Login</a>");
          $('.modal-title').html("<center style='font-style: italic;'>I'm a...</center>");
        });

        $('.error').removeClass('alert alert-danger').html('');
    }

    function showDevRegisterForm(){
      $('.registerBox').hide();

      $('.registerDeveloperBox').fadeIn('fast');
      $('.modal-dialog').animate({width: '400'}, 'fast', function() {
        $('.registerDeveloperBox .content').fadeIn('fast');
        $('.modal-title').html('<center>Register</center>');
        $('#modalFooterContent').html("Have an account? " + "<a href='javascript: showLoginForm()'>Login</a>");
      });

      $('.error').removeClass('alert alert-danger').html('');
    }

    function showNonprofitRegisterForm(){
      $('.registerBox').hide();

      $('.registerNonprofitBox').fadeIn('fast');
      $('.modal-dialog').animate({width: '400'}, 'fast', function() {
        $('.registerNonprofitBox .content').fadeIn('fast');
        $('.modal-title').html('<center>Register</center>');
        $('#modalFooterContent').html("Have an account? " + "<a href='javascript: showLoginForm()'>Login</a>");
      });

      $('.error').removeClass('alert alert-danger').html('');
    }


    function showLoginForm(){
        $('.registerBox').hide();
        $('.registerDeveloperBox').hide();
        $('.registerNonprofitBox').hide();

        $('.loginBox').fadeIn('fast');
        $('.modal-dialog').animate({width: '400'}, 'fast', function() {
          $('.modal-title').html('<center>Login</center>');
          $('#modalFooterContent').html("Need to Create an Account? " + "<a href='javascript: showRegisterForm()'>Create</a>");
        });

        $('.error').removeClass('alert alert-danger').html('');
    }

    function openLoginModal(){
        showLoginForm();
        setTimeout(function(){
            $('#loginModal').modal('show');
        }, 230);

    }
    function openRegisterModal(){
        showRegisterForm();
        setTimeout(function(){
            $('#loginModal').modal('show');
        }, 230);

    }

